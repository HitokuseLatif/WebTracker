<%= trackHelper() %>
<p id="notice"><%= notice %></p>

<h1>Tracked Sites</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Domain</th>
      <th>Total PV</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracked_sites.each do |tracked_site| %>
      <tr>
        <td><%= tracked_site.homepageURL %></td>
        <td><%= tracked_site.totalPV %></td>
        <td><%= link_to 'Show', tracked_site %></td>
        <td><%= link_to 'Edit', edit_tracked_site_path(tracked_site) %></td>
        <td><%= link_to 'Destroy', tracked_site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back to list of Tracked Webpages', tracked_pages_path %>
<br>
<%= link_to 'New Tracked Site', new_tracked_site_path %>
